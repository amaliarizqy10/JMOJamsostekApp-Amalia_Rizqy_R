<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="120dp">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:text="Program Layanan"
                android:textStyle="bold"
                android:textSize="25sp"
                android:id="@+id/tv_title"
                app:layout_constraintTop_toBottomOf="@id/banner"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="5dp"
                android:backgroundTint="@color/teal_200"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                android:id="@+id/cv_program1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Jaminan Hari Tua"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/cv_program1"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/teal_200"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/cv_program2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Jaminan Kecelakaan Kerja"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/cv_program2"
                android:id="@+id/cv_other"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Program Lainnya ->"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:textColor="@color/teal_700"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:text="Layanan Lainnya"
                android:textStyle="bold"
                android:textSize="25sp"
                android:id="@+id/tv_layanan"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/cv_other"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <GridLayout
                android:layout_width="match_parent"
                android:columnCount="4"
                android:paddingTop="20dp"
                android:rowCount="2"
                android:id="@+id/grid_layanan_first"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_layanan"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/ic_pay"
                    android:id="@+id/pay"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Pembayaran Iuran"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/ic_promo"
                        android:id="@+id/promo"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Promo"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/ic_pengkinian"
                        android:id="@+id/pengkinian"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Pengkinian Data"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/ic_office"
                        android:id="@+id/mitra"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Mitra Layanan"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/ic_info"
                        android:id="@+id/info"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Info Program"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/ic_text_snippet_fill0_wght400_grad0_opsz48"
                        android:id="@+id/Pelaporan"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Pelaporan"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/ic_cabang"
                        android:id="@+id/cabang"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Kantor Cabang"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/ic_report"
                        android:id="@+id/pengaduan"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Pengaduan"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:columnCount="4"
                android:paddingTop="20dp"
                android:rowCount="1"
                android:id="@+id/grid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/ic_home"
                        android:id="@+id/home"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Beranda"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/ic_newspaper"
                        android:id="@+id/news"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Berita"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/ic_phone"
                        android:id="@+id/contact"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Kontak"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/ic_profile"
                        android:id="@+id/profile"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Profil Saya"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>


